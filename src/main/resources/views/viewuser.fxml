                         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="33.0">
                    <tabs>
                        <Tab fx:id="myThreadTab" closable="false" text="Posted Threads">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <Pagination fx:id="pagination" currentPageIndex="1" layoutX="173.0"
                                                    layoutY="111.0" maxPageIndicatorCount="1" minHeight="644.0"
                                                    minWidth="776.0" pageCount="10" stylesheets="@../css/pagination.css"

                    <image>
                        <Image url="@../images/malecostume-512.png"/>
                    </image>
                </ImageView>
                <Label fx:id="lblName" alignment="CENTER" layoutX="14.0" layoutY="231.0" prefHeight="32.0"
                       prefWidth="190.0" style="-fx-background-color: darkgray;" text="User001"/>
                <Label fx:id="lblPostedThreads" layoutX="14.0" layoutY="275.0" prefHeight="32.0" prefWidth="190.0"
                       style="-fx-background-color: darkgray;" text="Posted Threads :"/>
                <Label fx:id="lblAnsweredThreads" layoutX="14.0" layoutY="318.0" prefHeight="32.0" prefWidth="190.0"
                       style="-fx-background-color: darkgray;" text="Answered Threads :"/>
                <Label fx:id="lblRegDate" layoutX="14.0" layoutY="362.0" prefHeight="32.0" prefWidth="190.0"
                       style="-fx-background-color: darkgray;" text="Since">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <HBox layoutX="58.0" layoutY="24.0" styleClass="my-drop-down-menu" stylesheets="@../css/navigationbar.css"
              AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="24.0">
            <children>
                <Label fx:id="lblHeading" minHeight="40.0" minWidth="190.0" onMouseClicked="#headingClicked"
                       prefHeight="40.0" prefWidth="501.0" styleClass="heading-label" text="ONLINE FORUM">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
                <ButtonBar buttonMinWidth="20.0" minHeight="40.0" minWidth="732.0">
                    <buttons>
                        <Button fx:id="btnHome" accessibleRole="MENU_BUTTON" layoutX="978.0" layoutY="14.0"
                                mnemonicParsing="false" onMouseClicked="#btnHomeClicked" text="Home"/>
                        <Button fx:id="btnThreads" layoutX="912.0" layoutY="14.0" mnemonicParsing="false"
                                onMouseClicked="#btnThreadsClicked" text="Threads"/>
                        <MenuButton fx:id="btnMenu" mnemonicParsing="false" styleClass="my-drop-down-menu">
                            <items>
                                <MenuItem fx:id="menuItemSettings" mnemonicParsing="false" onAction="#openSettings"
                                          style="-fx-graphic: url('http://icons.iconarchive.com/icons/martz90/circle/16/settings-icon.png');"
                                          text="Settings">
                                    <styleClass>
                                        <String fx:value="my-drop-down-menu-list-item"/>
                                        <String fx:value="my-drop-down-menu-list-item:hover"/>
                                    </styleClass>
                                </MenuItem>
                                <MenuItem fx:id="menuItemLogout" mnemonicParsing="false" onAction="#logout"
                                          style="-fx-graphic: url('http://icons.iconarchive.com/icons/icons8/windows-8/16/User-Interface-Logout-icon.png');"
                                          text="Logout">
                                    <styleClass>
                                        <String fx:value="my-drop-down-menu-list-item"/>
                                        <String fx:value="my-drop-down-menu-list-item:hover"/>
                                    </styleClass>
                                </MenuItem>
                            </items>
                        </MenuButton>
                    </buttons>
                </ButtonBar>
            </children>
        </HBox>
        <VBox layoutX="186.0" layoutY="768.0" prefHeight="91.0" prefWidth="1035.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
    </children>
</AnchorPane>

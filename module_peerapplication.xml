<?xml version="1.0" encoding="UTF-8"?>
<project name="module_peerapplication" default="compile.module.peerapplication">
  <dirname property="module.peerapplication.basedir" file="${ant.file.module_peerapplication}"/>
  
  <property name="module.jdk.home.peerapplication" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.peerapplication" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.peerapplication" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.peerapplication" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="peerapplication.output.dir" value="${module.peerapplication.basedir}/target/classes"/>
  <property name="peerapplication.testoutput.dir" value="${module.peerapplication.basedir}/target/test-classes"/>
  
  <path id="peerapplication.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="peerapplication.module.production.classpath">
    <path refid="${module.jdk.classpath.peerapplication}"/>
    <path refid="library.maven:_org.apache.derby:derby:10.14.1.0.classpath"/>
  </path>
  
  <path id="peerapplication.runtime.production.module.classpath">
    <pathelement location="${peerapplication.output.dir}"/>
    <path refid="library.maven:_org.apache.derby:derby:10.14.1.0.classpath"/>
  </path>
  
  <path id="peerapplication.module.classpath">
    <path refid="${module.jdk.classpath.peerapplication}"/>
    <pathelement location="${peerapplication.output.dir}"/>
    <path refid="library.maven:_org.apache.derby:derby:10.14.1.0.classpath"/>
  </path>
  
  <path id="peerapplication.runtime.module.classpath">
    <pathelement location="${peerapplication.testoutput.dir}"/>
    <pathelement location="${peerapplication.output.dir}"/>
    <path refid="library.maven:_org.apache.derby:derby:10.14.1.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.peerapplication">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.peerapplication">
    <patternset refid="excluded.from.module.peerapplication"/>
  </patternset>
  
  <path id="peerapplication.module.sourcepath">
    <dirset dir="${module.peerapplication.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="peerapplication.module.test.sourcepath">
    <dirset dir="${module.peerapplication.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.peerapplication" depends="compile.module.peerapplication.production,compile.module.peerapplication.tests" description="Compile module PeerApplication"/>
  
  <target name="compile.module.peerapplication.production" depends="register.custom.compilers" description="Compile module PeerApplication; production classes">
    <mkdir dir="${peerapplication.output.dir}"/>
    <javac2 destdir="${peerapplication.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.peerapplication}/javac">
      <compilerarg line="${compiler.args.peerapplication}"/>
      <bootclasspath refid="peerapplication.module.bootclasspath"/>
      <classpath refid="peerapplication.module.production.classpath"/>
      <src refid="peerapplication.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.peerapplication"/>
    </javac2>
    
    <copy todir="${peerapplication.output.dir}">
      <fileset dir="${module.peerapplication.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.peerapplication.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.peerapplication.tests" depends="register.custom.compilers,compile.module.peerapplication.production" description="compile module PeerApplication; test classes" unless="skip.tests">
    <mkdir dir="${peerapplication.testoutput.dir}"/>
    <javac2 destdir="${peerapplication.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.peerapplication}/javac">
      <compilerarg line="${compiler.args.peerapplication}"/>
      <bootclasspath refid="peerapplication.module.bootclasspath"/>
      <classpath refid="peerapplication.module.classpath"/>
      <src refid="peerapplication.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.peerapplication"/>
    </javac2>
    
    <copy todir="${peerapplication.testoutput.dir}">
      <fileset dir="${module.peerapplication.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.peerapplication" description="cleanup module">
    <delete dir="${peerapplication.output.dir}"/>
    <delete dir="${peerapplication.testoutput.dir}"/>
  </target>
</project>